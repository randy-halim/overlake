{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2018",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@Classes/*": ["./classes/*"],
      "@ClientHandlers/*": ["./client-handlers/*"],
      "@Common/*": ["./common/*"],
      "@ClientCommands/*": ["./client-handlers/commands/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"]
}
